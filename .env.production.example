# Frontend Production Environment Configuration
# Copy this file to .env.production.local for production builds

# ==========================================
# API CONFIGURATION
# ==========================================
REACT_APP_API_URL=https://api.yourdomain.com/api

# ==========================================
# STRIPE CONFIGURATION
# ==========================================
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_actual_stripe_publishable_key

# ==========================================
# ENVIRONMENT
# ==========================================
REACT_APP_ENVIRONMENT=production

# ==========================================
# FEATURE FLAGS
# ==========================================
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_TRACKING=true

# ==========================================
# API TIMEOUTS
# ==========================================
REACT_APP_API_TIMEOUT=10000

# ==========================================
# LOGGING
# ==========================================
# Set to 'false' to disable console logging in production
REACT_APP_DEBUG_MODE=false
